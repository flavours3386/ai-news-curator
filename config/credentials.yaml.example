# 인증 정보 설정
# 이 파일을 credentials.yaml로 복사하고 실제 값을 입력하세요
# ⚠️ credentials.yaml은 절대 git에 커밋하지 마세요!

notion:
  # Notion Integration Token
  # https://www.notion.so/my-integrations 에서 생성
  integration_token: "secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

  # Database ID
  # 노션 데이터베이스 URL에서 추출
  # https://notion.so/username/xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx?v=...
  database_id: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Anthropic API (LinkedIn 포스트 생성용)
anthropic:
  api_key: "sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# LinkedIn Posts Notion Database
# 별도의 노션 DB를 생성하고 ID를 입력하세요
notion:
  linkedin_database_id: "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# 선택적: API 소스
apis:
  reddit:
    client_id: ""
    client_secret: ""
    user_agent: "AINewsCurator/1.0"
